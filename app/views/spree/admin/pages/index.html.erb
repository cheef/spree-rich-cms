<% content_for :page_title do %>
  <%= Spree.t(:pages) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:new_page), new_admin_page_url, icon: 'icon-plus' %>
  </li>
<% end if can? :create, Spree::Page %>

<ul class="index pages">
  <% if @pages.any?%>
    <%= render partial: 'page_li', collection: @pages, as: :page %>
  <% else %>
    <li class="alpha twelve columns no-objects-found">
      <%= Spree.t :no_resource_found, resource: I18n.t(:other, scope: 'activerecord.models.spree/page') %>,
      <%= link_to Spree.t(:add_one), spree.new_admin_page_path %>!
    </li>
  <% end %>
</ul>